<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation=
        "http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://www.springframework.org/schema/mvc
         http://www.springframework.org/schema/mvc/spring-mvc.xsd
         http://www.springframework.org/schema/tx
         http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context.xsd
         http://www.springframework.org/schema/aop
         http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">
 
    <!-- Bean definitions go here -->
    <bean id="userIO" 
          class="com.sg.flooringmastery.ui.UserIOConsoleImpl"/>    
    
    <bean id="taxRate" 
          class="com.sg.flooringmastery.dto.TaxRates"/>
 
    <bean id="productPrice" 
          class="com.sg.flooringmastery.dto.ProductPrice"/>  
    
    <bean id="productLaborCost" 
          class="com.sg.flooringmastery.dto.ProductLaborCost"/>
    
    <bean id="taxes" 
          class="com.sg.flooringmastery.dto.Taxes"/>
 
    <bean id="products" 
          class="com.sg.flooringmastery.dto.Products"/>      
    
    <bean id="view" 
          class="com.sg.flooringmastery.ui.FlooringMasteryView">
        <constructor-arg ref="userIO"/>
        <constructor-arg ref="taxRate"/>
        <constructor-arg ref="productPrice"/>
        <constructor-arg ref="productLaborCost"/>
        <constructor-arg ref="taxes"/>
        <constructor-arg ref="products"/>                              
    </bean>    
        
    <bean id="flooringMasteryDao" 
          class="com.sg.flooringmastery.dao.FlooringMasteryDaoFileImpl"/>
    
    <bean id="auditDao" 
          class="com.sg.flooringmastery.dao.FlooringMasteryAuditDaoImpl"/>
    
    <bean id="flooringMasteryTaxesDao" 
          class="com.sg.flooringmastery.dao.FlooringMasteryTaxesDaoFileImpl"/>
    
    <bean id="flooringMasteryProductsDao" 
          class="com.sg.flooringmastery.dao.FlooringMasteryProductsDaoFileImpl"/>
    
    <bean id="serviceLayer" 
          class="com.sg.flooringmastery.service.FlooringMasteryServiceLayerImpl">
        <constructor-arg ref="flooringMasteryDao"/>
        <constructor-arg ref="auditDao"/> 
        <constructor-arg ref="flooringMasteryTaxesDao"/>
        <constructor-arg ref="flooringMasteryProductsDao"/>
    </bean>      
    
    <bean id="controller" 
          class="com.sg.flooringmastery.controller.FlooringMasteryController">
        <constructor-arg ref="serviceLayer"/>
        <constructor-arg ref="view"/> 
    </bean>     
    
</beans>
